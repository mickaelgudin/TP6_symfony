{% extends 'base.html.twig' %}

{% block title %}Pokemon index{% endblock %}

{% block body %}
    <h1>Pokemon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_pokemon</th>
                <th>Sexe</th>
                <th>Xp</th>
                <th>Niveau</th>
                <th>PrixVente</th>
                <th>PokemonTypeId</th>
                <th>Dresseurid</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pokemon in pokemon %}
            <tr>
                <td>{{ pokemon.idp }}</td>
                <td>{{ pokemon.sexe }}</td>
                <td>{{ pokemon.xp }}</td>
                <td>{{ pokemon.niveau }}</td>
                <td>{{ pokemon.prixVente }}</td>
                <td>{{ pokemon.pokemonTypeId }}</td>
                <td>{{ pokemon.dresseurid }}</td>
                <td>{{ pokemon.status }}</td>
                <td>
                    <a href="{{ path('pokemon_show', {'id_pokemon': pokemon.idp}) }}">show</a>
                    <a href="{{ path('pokemon_edit', {'id_pokemon': pokemon.idp}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pokemon_new') }}">Create new</a>
{% endblock %}
