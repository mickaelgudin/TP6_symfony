{% extends 'base.html.twig' %}

{% block title %}Pokemon index{% endblock %}

{% block body %}
    <h1>Mes Pokemons</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Sexe</th>
                <th>Xp</th>
                <th>Niveau</th>
                <th>PrixVente</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pokemon in pokemon %}
            <tr>
                <td>{{ pokemon.nom }}</td>
                <td>{{ pokemon.sexe }}</td>
                <td>{{ pokemon.xp }}</td>
                <td>{{ pokemon.niveau }}</td>
                <td>{{ pokemon.prix_vente }}</td>
                <td>{{ pokemon.status }}</td>
                <td>
                	{% if pokemon.status != 'v' %}
						<a class="btn btn-primary" href="{{ path('sell', {'id': pokemon.idP}) }}" role="button">Vendre</a>
                    	<a class="btn btn-primary" href="" role="button">Entrainer</a>
                    	{% else %}
                    	<a class="btn btn-primary" href="{{ path('remove_from_sells', {'id': pokemon.idP}) }}" role="button">Retirer des ventes</a>
                    {% endif %}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pokemon_new') }}">Create new</a>
{% endblock %}
