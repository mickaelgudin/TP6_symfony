{% extends 'base.html.twig' %}

{% block title %}Mes Pokemons{% endblock %}



{% block body %}

{% for label, messages in app.flashes(['success', 'error']) %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

    <h1>Mes Pokemons</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Sexe</th>
                <th>Xp</th>
                <th>Niveau</th>
                <th>PrixVente</th>
                <th>Status</th>
                <th>Entrainer</th>
                <th>Vendre / Retirer des ventes</th>
            </tr>
        </thead>
        <tbody>
        {% for pokemon in pokemon %}
            <tr>
                <td>{{ pokemon.nom }}</td>
                <td>{{ pokemon.sexe }}</td>
                <td>{{ pokemon.xp }}</td>
                <td>{{ pokemon.niveau }}</td>
                <td>{{ pokemon.prix_vente }}</td>
                <td>{{ pokemon.status }}</td>
                <td>
					{% if pokemon.date_action!=NULL %}
                        {% set date_now = date("now")|format_datetime() %}
                        {% set old_date = pokemon.date_action|format_datetime() %}
                        {% set r = date(old_date).diff(date(date_now)) %}
                        {% set hour = r.h %}
                        {% set result = hour + r.days*24 %}
                        {% if result > 0 and pokemon.status != 'v'%}
                            {{ include('pokemon/_training_form.html.twig') }}
                        {%endif %}
                    {% elseif pokemon.status != 'v' %}
                        {{ include('pokemon/_training_form.html.twig') }}
                    {% endif %}
                    {% if pokemon.status != 'v' %}
                    	{{ include('pokemon/_changeprice_form.html.twig') }}     
                	{% endif %}
                </td>
                
                {% if pokemon.status == 'v' %}
                <td>
                	<a class="btn btn-danger" href="{{ path('remove_from_sells', {'id': pokemon.idP}) }}" role="button" onclick="return confirm('Are you sure you want to remove your pokemon from sales?');">Retirer des ventes</a>
                </td>
                {% endif %}
                
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
