{% extends 'base.html.twig' %}

{% block title %}PokemonType index{% endblock %}

{% block body %}
    <h1>PokemonType</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type 1</th>
                <th>Type 2</th>
                <th>Evolution</th>
                <th>Starter</th>
                <th>TypeCourbeNiveau</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pokemon_type in pokemon_types %}
            <tr>
                <td>{{ pokemon_type.id }}</td>
                <td>{{ pokemon_type.nom }}</td>
                <td>{{ pokemon_type.lib1 }}</td>
                <td>{{ pokemon_type.lib2 }}</td>
                <td>{{ pokemon_type.evolution ? 'Yes' : 'No' }}</td>
                <td>{{ pokemon_type.starter ? 'Yes' : 'No' }}</td>
                <td>{{ pokemon_type.type_courbe_niveau }}</td>
                <td>
                    <a href="{{ path('pokemon_type_show', {'id': pokemon_type.id}) }}">show</a>
                    <a href="{{ path('pokemon_type_edit', {'id': pokemon_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pokemon_type_new') }}">Create new</a>
{% endblock %}
